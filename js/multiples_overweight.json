{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text":"Year", "fontSize":20, "fontWeight":"normal", "anchor": "middle", "subtitle": " "},
  "hconcat":[
        {
            "width": 300,
            "height": 130,
            "title": {
                "text": "1975",
                "fontWeight": "normal"},
            "layer": [
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/hawxiaoying/DataVisualisation2/main/data/map.topojson",
                        "format": {
                            "type": "topojson", 
                            "feature": "ne_110m_admin_0_countries"
                        }
                    },
                    "mark": {
                        "type": "geoshape", 
                        "fill": "lightgray"
                    }
                },

                {
                    "data": {
                            "url": "https://raw.githubusercontent.com/hawxiaoying/DataVisualisation2/main/data/overweight_countries.csv"
                        },
                    "transform": [
                        {
                            "lookup": "Entity",
                            "from": {
                                "data": {
                                    "url": "https://raw.githubusercontent.com/hawxiaoying/DataVisualisation2/main/data/map.topojson",
                                    "format": {
                                        "type": "topojson",
                                        "feature": "ne_110m_admin_0_countries"
                                    }
                                },
                                "key": "properties.NAME"
                            },
                            "as": "geo"
                        },
                        {"filter":{"field": "Year", "equal":1975}}
                    ],
                    "projection": {"type": "equirectangular"},
                    "mark": "geoshape",
                    "encoding": {
                        "shape": {"field": "geo", "type": "geojson"},
                        "color": {
                            "field": "Both",
                            "type": "quantitative",
                            "scale": {
                                "scheme": "oranges",
                                "domain": [18.1, 70.2]
                            },
                            "legend":null
                        }
                    }
                }
