{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 920,
  "height": 450,
  "title": {"text":"2016", "fontSize":16, "fontWeight":"normal"},
  "projection": {
    "type": "equirectangular",
    "scale": {"expr": "zooming"},
    "center": {"expr": "centering"}
  },
  "params": [
    {
      "name": "zooming",
      "value": 145,
      "bind": {
        "input": "range",
        "min": 145,
        "max": 500,
        "step": 5,
        "name": "Zoom: "
      }
    },
    {
      "name": "centering",
      "value": [0, 0],
      "bind": {
          "input": "select",
          "options": [
              [0, 0],
              [-64, -38],
              [134, -25],
              [2.2, 46],
              [53, 32],
              [102, 4.2],
              [-102, 23],
              [127, 40],
              [23,-30]
            ],
          "labels": [
              "Default",
              "Argentina",
              "Australia",
              "France",
              "Iran",
              "Malaysia",
              "Mexico",
              "North Korea",
              "South Africa"
              ],
          "name": "Map Centre: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hawxiaoying/DataVisualisation2/main/data/map.topojson",
        "format": {
          "type": "topojson", 
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape", 
        "fill": "lightgray"
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },

    {
      "params": [
        {
          "name": "highlight",
          "select": {
            "type": "point", 
            "on": "mouseover"}
        }
      ],
      "data": {
        "url": "https://raw.githubusercontent.com/hawxiaoying/DataVisualisation2/main/data/map.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/hawxiaoying/DataVisualisation2/main/data/obesity_countries_2016.csv"
            },
            "key": "Entity",
            "fields": ["Both"]
          }
        }
      ],
      "mark": {
        "type": "geoshape", 
        "stroke": "black", 
        "strokeWidth": 0.2
      },
      "encoding": {
        "color": {
          "field": "Both",
          "type": "quantitative",
          "scale": {
            "scheme": "reds"
          },
          "title": "Prevalence (%)",
          "legend":{
            "orient": "none",
            "legendX": 10,
            "legendY": 205
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Both", "type": "quantitative", "title":"Prevalence of Overweight"}
        ],
        "strokeWidth": {
          "condition": [
            {
              "param": "highlight",
              "empty": false,
              "value": 1
            }
          ],
          "value": 0
        }
      }
    },


    {
      
      "data":{
        "url": "https://raw.githubusercontent.com/hawxiaoying/DataVisualisation2/main/data/countries_location.csv"
      },
      "encoding": {
        "latitude":{
            "field": "latitude",
            "type": "quantitative"
        },
        "longitude":{
            "field": "longitude",
            "type": "quantitative"
        }
      },
      "layer":[
        {
          "mark":{
            "type": "text",
            "fontWeight":"bold"
          },
          "encoding": {
            "text":{
              "condition":{
                "test":"datum['name'] === 'Malaysia'",
                "value": "Malaysia"
              } 
            }
          }    
        },

        {
          "mark":{
            "type": "text",
            "fontWeight":"bold"
          },
          "encoding": {
            "text":{
              "condition":{
                "test":"datum['name'] === 'Australia'",
                "value": "Australia"
              } 
            }
          }
        },

        {
          "mark":{
            "type": "text",
            "fontWeight":"bold"
          },
          "encoding": {
            "text":{
              "condition":{
                "test":"datum['name'] === 'Mexico'",
                "value": "Mexico"
              } 
            }
          }
        },

        {
          "mark":{
            "type": "text",
            "fontWeight":"bold"
          },
          "encoding": {
            "text":{
              "condition":{
                "test":"datum['name'] === 'South Africa'",
                "value": "South Africa"
              } 
            }
          }
        },

        {
          "mark":{
            "type": "text",
            "fontWeight":"bold"
          },
          "encoding": {
            "text":{
              "condition":{
                "test":"datum['name'] === 'Argentina'",
                "value": "Argentina"
              } 
            }
          }
        },

        {
          "mark":{
            "type": "text",
            "fontWeight":"bold"
          },
          "encoding": {
            "text":{
              "condition":{
                "test":"datum['name'] === 'France'",
                "value": "France"
              } 
            }
          }
        },

        {
          "mark":{
            "type": "text",
            "fontWeight":"bold"
          },
          "encoding": {
            "text":{
              "condition":{
                "test":"datum['name'] === 'Iran'",
                "value": "Iran"
              } 
            }
          }
        },

        {
          "mark":{
            "type": "text",
            "fontWeight":"bold"
          },
          "encoding": {
            "text":{
              "condition":{
                "test":"datum['name'] === 'North Korea'",
                "value": "North Korea"
              } 
            }
          }
        }
      ]
    }
  ]
}